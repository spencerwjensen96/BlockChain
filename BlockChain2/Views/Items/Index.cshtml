@model IEnumerable<BlockChain2.Models.Item>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @if (BlockChain2.Controllers.HomeController.userType == "farmer")
    {
        @Html.ActionLink("Create New", "Create")
    }

</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.itemName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.serialNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.quantityOfItem)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.certs)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.itemName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.serialNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.quantityOfItem)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.certs)
        @*@foreach (var cert in item.certs) {
            <p>@Html.DisplayFor(x => cert[x])</p>
        }*@
        </td>
        <td>
            @*@Html.ActionLink("Edit", "Edit", new { id=item.itemID }) |*@
            @Html.ActionLink("Details", "Details", new { id=item.itemID })
            @*@Html.ActionLink("Delete", "Delete", new { id=item.itemID })*@
        </td>
    </tr>
}

</table>
